<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/recycler_view_side_dist" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/recipe_info_fragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/recycler_view_side_dist"
        android:id="@+id/rl_info_list_nav_btn_container" >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onNavigationButtonClicked"
            android:id="@+id/ib_info_list_nav_btn_prev"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_icons8_prev_96"
            android:background="@drawable/recipe_info_list_nav_btn_background"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onNavigationButtonClicked"
            android:id="@+id/ib_info_list_nav_btn_next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_icons8_next_96"
            android:background="@drawable/recipe_info_list_nav_btn_background"/>

    </RelativeLayout>

</LinearLayout>