<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/recipe_list_side_dist">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recipe_info_list_detail_fragment"
        android:layout_above="@+id/rl_detail_nav_btn_container"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_detail_nav_btn_container"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onNavigationButtonClicked"
            android:id="@+id/ib_detail_nav_btn_prev"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_icons8_prev_96"
            android:background="@drawable/recipe_info_list_detail_nav_btn_background"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onNavigationButtonClicked"
            android:id="@+id/ib_detail_nav_btn_next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_icons8_next_96"
            android:background="@drawable/recipe_info_list_detail_nav_btn_background"/>

    </RelativeLayout>

</RelativeLayout>